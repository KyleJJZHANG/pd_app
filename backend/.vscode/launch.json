{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "jinja": true,
            "justMyCode": false,
            "python": "${env:CONDA_PREFIX}/python.exe"
        },
        {
            "name": "Python: Start Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/start.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${env:CONDA_PREFIX}/python.exe"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${env:CONDA_PREFIX}/python.exe"
        },
        {
            "name": "Python: Agent Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_agents.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${env:CONDA_PREFIX}/python.exe",
            "args": ["-v"]
        }
    ]
}