# Duck Therapy Backend Environment Variables
# Copy this file to .env and update with your actual values

# LLM Provider API Keys (at least one recommended)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration (for local deployment)
OLLAMA_BASE_URL=http://localhost:11434

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Agent Configuration
LISTENER_AGENT_LLM=openai
DUCK_STYLE_AGENT_LLM=openai

# Security (generate a secure secret key)
SECRET_KEY=your-32-character-secret-key-here-change-this-in-production

# Database (optional - defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost/duck_therapy

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379/0
# USE_REDIS=false
