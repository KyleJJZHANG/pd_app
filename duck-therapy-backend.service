[Unit]
Description=Duck Therapy Backend API
After=network.target

[Service]
Type=simple
User=your-username
WorkingDirectory=/path/to/your/project/backend
Environment=PATH=/path/to/your/conda/envs/duck_therapy/bin
Environment=PYTHONPATH=/path/to/your/project/backend
Environment=OPENAI_API_KEY=your-openai-key
Environment=ANTHROPIC_API_KEY=your-anthropic-key
Environment=OLLAMA_BASE_URL=http://localhost:11434
ExecStart=/path/to/your/conda/envs/duck_therapy/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
